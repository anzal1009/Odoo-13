<odoo>
    <data>
        <record id="res_config_settings_form" model="ir.ui.view">
            <field name="name">res.config.settings.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='stock']/h2[5]" position="before">
                    <h2>MRP Indent</h2>
                    <div class="row mt16 o_settings_container" id="mrp_indent_settings">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="mrp_indent_source_location"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="mrp_indent_source_location" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <label for="mrp_indent_transit_location"/>
                                    <div class="mt16">
                                        <field name="mrp_indent_transit_location" class="o_light_label" />
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </xpath>
            </field>
        </record>

    </data>
</odoo>