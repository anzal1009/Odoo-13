<odoo>
    <data>
        <record id="view_res_config_settings_enable_negative_balance_checking" model="ir.ui.view">
            <field name="name">res.config.settings.form.view</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='account']/h2[3]" position="before">
                    <h2>Negative Balance Checking</h2>
                    <div class="row mt16 o_settings_container" id="negative_balance_checking_settings">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                    <field name="je_negative_balance_cash_bank" class="o_light_label"/>
                                </div>
                            <div class="o_setting_right_pane">
                                <label for="je_negative_balance_cash_bank"/>

                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>