<odoo>
    <data>
        <record id="res_config_settings_form" model="ir.ui.view">
            <field name="name">res.config.settings.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='purchase']/h2[3]" position="after">
                    <h2>MSME Vendors</h2>
                    <div class="row mt16 o_settings_container" id="msme_vendor_settings">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="msme_payment_term_id"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="msme_payment_term_id" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </xpath>
            </field>
        </record>

    </data>
</odoo>